- posts.each do |post|
  %li{id:post.id, data:{"aspect-ratio"=>"#{post.aspect_ratio}"}}
    .photo
      = image_tag(url_for_cdn_image(post, post.photo_url(:large)))
      .post-info-bar
        - case post.provider
        - when "facebook"
          .facebook_logo_gray.pull-left
        - when "instagram"
          .instagram_logo_gray.pull-left
        - when "tumblr"
          .tumblr_logo_gray.pull-left
        - when "foursquare"
          .foursquare_logo_gray.pull-left
        .date
          = post.company.name
          = render('shared/pretty_publication_date', post:post)
