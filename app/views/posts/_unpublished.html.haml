- posts.each do |post|
  %li{id:post.id, class:"photo-wrapper#{post.published ? ' published' : ' unpublished'}"}
    - if post.created_at > @last_reviewed_time
      .new-post-ribbon-wrapper
        .new-post-ribbon NEW
    = link_to(post_url(post.id, subdomain: post.company.subdomain), method:"#{post.published ? 'delete':'put'}", remote:true) do
      .photo
        .photo-overlay
        .photo-overlay-text= post.published ? "âœ“" : "publish"
        = image_tag post.media_url_small
    .info.text-center
      = "#{post.provider_publication_date.strftime("%b %d") if post.provider_publication_date} - "

      = capitalize_phrase(post.provider)
      = post.provider_strategy unless post.provider_strategy == "default"
