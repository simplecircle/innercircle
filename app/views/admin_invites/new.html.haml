#user
  = render "shared/flash", :flash=>flash
  - unless flash[:notice]
    .container
      .row-fluid
        .span12.form-row-narrow.mobile-padding.column-center.text-center
          %h4.mvl Enter the email address for the admin you'd like to invite
      .row-fluid
        .span12.form-row-narrow.mobile-padding.column-center
          .well
            = form_tag admin_invites_path, :method => :post do
              %p
                = email_field_tag(:email, params[:email], class:"input-block-level", placeholder:"Email")
              = submit_tag "Submit", class:"btn span12"