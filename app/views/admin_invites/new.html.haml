#user
  = render "shared/flash", :flash=>flash
  - unless flash[:notice]
    .container-fluid
      .row-fluid
        .span12.form-row.mobile-padding.column-center.text-center
          %h3.mvl Enter the email address for the admin you'd like to invite
        .span12.form-row.mobile-padding.column-center
          .well
            = form_tag admin_invites_path, :method => :post do
              %p
                = text_field_tag(:email, params[:email], class:"input-block-level", placeholder:"Email")
              = submit_tag "Submit", class:"btn mbs span12"