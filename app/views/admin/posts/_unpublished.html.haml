- posts.each do |post|
  %li{id:post.id, class:"photo-wrapper #{post.published ? ' published' : ' unpublished'}", data:{"aspect-ratio"=>"#{post.aspect_ratio}"}}
    = link_to(admin_post_url(post.id), method:"#{post.published ? 'delete':'patch'}", remote:true) do
      .photo
        .photo-overlay
        .photo-overlay-text= post.published ? "âœ“" : "Publish"
        = image_tag post.media_url_small
    - if post.caption
      .caption= strip_tags(CGI::unescapeHTML(post.caption))
    .info
      - case post.provider
      - when "facebook"
        .facebook_logo_gray.pull-left
      - when "instagram"
        .instagram_logo_gray.pull-left
        - if post.provider_strategy == "location"
          .location_pin_gray.pull-left
      - when "tumblr"
        .tumblr_logo_gray.pull-left
      - when "foursquare"
        .foursquare_logo_gray.pull-left
      .date.pull-right= render('shared/pretty_publication_date', post:post)
      .clearfix
    .name= link_to(post.company.name.upcase, root_url(subdomain:post.company.subdomain), target:"_blank")
