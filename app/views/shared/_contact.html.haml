      =link_to "hello@getinnercircle.com", "mailto:hello@getinnercircle.com"
      &nbsp;|&nbsp;917.880.2147
    %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .nav-collapse-border-div
    .nav-collapse.collapse
      %ul.nav.pull-right
        - if current_user
          - if current_user.god?
            %li= link_to("Companies", companies_url(subdomain:false))
            %li= link_to("#{capitalize_phrase(current_company.name)}â€™s Dashboard", dashboard_url) if current_company
          - if current_user.admin?
            %li= link_to("Dashboard", dashboard_url)
          %li.dropdown
            %a.display-strong.white.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              - unless current_user.profile.first_name.blank?
                = current_user.profile.first_name.capitalize
              - else
                = current_user.email
              %b.caret.caret-black
            %ul.dropdown-menu
              %li= link_to "Edit Your Profile", :controller => "users", :action=> "edit", :id => current_user.id
              %li= link_to "Logout", logout_url(subdomain:false)
        - else
          %li= link_to "Login", login_url, class:"pull-right"