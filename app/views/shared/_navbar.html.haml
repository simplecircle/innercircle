.navbar.navbar-fixed-top
  .navbar-inner
    %h1.hidden-desktop.hidden-tablet.pull-left= @headline
    %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .nav-collapse.collapse
      .container-fluid
        .row-fluid
          .span1.hidden-phone
            .brand= link_to(image_tag("logo_small_gray.jpg"), talent_url)
          .span11
            %ul.nav
              %li.divider-vertical
                %h1= @headline
            %ul.nav.pull-right
              %li.divider-vertical
              - if current_company
                %li
                  = link_to(capitalize_phrase(current_company.name), talent_url)
              - if current_user
                %li.dropdown
                  %a.display-strong.white.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    = first_name(current_user.full_name).capitalize
                    %b.caret.caret-black
                  %ul.dropdown-menu
                    %li= link_to "Logout", logout_url
              - else
                %li
                  = link_to "Log In", login_url
