.navbar.navbar-fixed-top
  .navbar-inner
    %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    .nav-collapse.collapse
      .container
        .row
          .span1.hidden-phone
            .brand= link_to(image_tag("logo_small_gray.jpg"), root_url(subdomain:false, src:"nav"))
          .span11
            %ul.nav
              %li.divider-vertical
                %h1= @headline
            %ul.nav.pull-right
              - if current_user && current_user.role == "admin"
                %li
                  = link_to("Dashboard", dashboard_url)
              - if current_user
                %li.dropdown
                  %a.display-strong.white.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                    - unless current_user.profile.first_name.blank?
                      = current_user.profile.first_name.capitalize
                    - else
                      = current_user.email
                    %b.caret.caret-black
                  %ul.dropdown-menu
                    %li= link_to "Logout", logout_url(subdomain:false)
              - else
                %li
                  = link_to "Login", login_url
