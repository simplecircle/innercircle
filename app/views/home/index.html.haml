- content_for :title do
  Discover and Follow Exciting Companies in Creative & Tech | JobCrush
- content_for :og_tags do
  %meta{property:"og:url", content:root_url(subdomain:false)}
  %meta{property:"og:image", content:URI.join(root_url, image_path('inner_circle_square.jpg'))}
  %meta{property:"og:title", content:"JobCrush"}
  %meta{property:"og:description", content:"Discover and Follow Exciting Companies in Creative & Tech"}
.container
  .hero.col-md-12
    %h1
      FOLLOW DAILY LIFE AT EXCITING COMPANIES
    %h2.pbxl
      JobCrush provides a unique look into a company’s culture. Use it to find work with a company that fits your style or just stay “in the know”.
    %h3.red EXPLORE      
    .arrow_down.centered
  .row.mtxl
    - @companies.each do |company|
      - post = company.posts.where(published:true).first
      .col-md-6
        .company-card
          .company-card__cover-wrapper
            .company-card__cover-opacity-overlay
            = link_to(root_url(subdomain:company.subdomain)) do
              .connection-flag__triangle-wrapper    
                .connection-flag__triangle
                .connection-flag HIRING
              .company-card__name= company.name.upcase
              = image_tag(url_for_cdn_image(post, post.photo_url(:medium)), class:"company-card__cover")
          .company-card__info
            .pull-left= link_to(truncate(company.short_description, length:53, separator:' '), root_url(subdomain:company.subdomain), class:"inverse-link")
            .pull-right= render("relationships/follow_btn", company:company, size:"default")