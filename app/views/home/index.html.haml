%section.container-fluid#homepage-bottom
  .row-fluid
    .span12.pal
      - @companyrows.each do |companyrow|
        .row-fluid
          - companyrow.each do |company|
            = link_to(root_url(subdomain:company.subdomain), {:class=>'company-wrapper pam span6'}) do
              .filmstrip.mbs{:style=>"border-bottom-color:#{company.hex_code};"}
                - company.latest_published_posts(3).each do |post|
                  .filmstrip-image{:class=>post.wrapper_class}
                    = image_tag post.photo_url(:medium), :style=>post.offset(140)
                .clearfix
              .company-info
                .pull-right.company-last-updated-time.hidden-phone= company.last_published_time
                .pull-left.company-name.mbn.mts= company.name
                .pull-left.company-hq.mll.mts.hidden-phone= company.hq_city
                .clearfix
                .company-description= company.short_description