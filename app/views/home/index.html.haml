- content_for :title do
  inner circle - Capture top talent, whether or not they’re looking for a job
- content_for :og_tags do
  %meta{property:"og:url", content:root_url(subdomain:false)}
  %meta{property:"og:image", content:URI.join(root_url, image_path('inner_circle_square.jpg'))}
  %meta{property:"og:title", content:"inner circle"}
  %meta{property:"og:description", content:"Capture top talent, whether or not they’re looking for a job"}
.container
  #company-index
    %section
      .span8.offset2
        %h1
          DISCOVER AND FOLLOW EXCITING COMPANIES IN CREATIVE & TECH
        %h2
          BOOM BOOM BOOM
    %section#company-index-bottom.span8.offset2.mtxl
      - @companies.each do |company|
        = link_to(root_url(subdomain:company.subdomain), {:class=>'company-wrapper mbxl'}) do
          .filmstrip.mbs{:style=>"border-bottom-color:#{company.hex_code};"}
            - company.latest_posts_by_provider_date(3).each do |post|
              .filmstrip-image{:class=>post.wrapper_class}
                = image_tag post.photo_url(:medium)
            .clearfix
          .company-info.mbl
            .pull-right.company-last-updated-time= company.last_published_time
            .pull-left.company-name.mbn.mts= company.name.upcase
            .pull-left.company-hq.mlm.mts= company.hq_city
            .clearfix
            .company-description= company.short_description