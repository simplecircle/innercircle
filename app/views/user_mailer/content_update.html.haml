    %table{width:"100%",bgcolor:"#F2F2F2"}
      %tr
        %td
          %br
          %br
          %table{width:"600px",  align:"center"}
            %tr
              %td{align:"center"}
                = link_to("http://getinnercircle.com") do
                  %img{src:"http://fbb10cc56329cb5ea057-4ca1418a7613371d048778718c3acae9.r81.cf1.rackcdn.com/inner_circle_logo.png", alt:"inner circle"}
