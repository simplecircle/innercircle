          %table{width:"600px", bgcolor:"white", align:"center", style:"padding:15px 15px 20px 15px; border-bottom:1px solid #ccc;"}
            %tr
              %h2{width:"100%", style:"color:#333;margin-bottom:10px;font-size:22px;font-weight:bold;"}
