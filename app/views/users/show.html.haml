.container
  .row
    .span1
      &nbsp;
    .span11
      %h3= @user.profile.job_title.capitalize if @user.profile.job_title
%hr
.container
  .row
    .span1
      &nbsp;
    .span8
      = link_to("Learn more", @user.profile.url, target:"_blank", class:"btn btn-large btn-primary pull-left") if @user.profile.url
      = mail_to(@user.email, "Email #{first_name(@user.full_name)}", class:"btn btn-large btn-primary pull-left") if @user.email
      .clearfix
      %ul#skills
        - @user.profile.skills.each do |skill|
          %li= skill