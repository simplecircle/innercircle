= form_for @company, :html=>{multipart:true} do |f|
  = f.fields_for :users do |user|
    = user.hidden_field :role, value:"admin"
    %p
      = user.label :full_name
      = user.text_field :full_name
    %p
      = user.label :email
      = user.text_field :email
    %p
      = user.label :password
      = user.password_field :password
  %p
    = f.label :name, "Company name"
    = f.text_field :name
  %p
    = f.label :website_url
    = f.text_field :website_url
  %p
    = f.label :banner
    = f.file_field :banner
  = f.submit "Create account"

