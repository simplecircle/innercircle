#user
  .span5.column-center
    .span5.column-center.text-center
      = render "shared/flash", :flash=>flash
    .text-center.mbl
      %h5 Submit your email for password reset instructions
    .well
      = form_tag password_resets_path, :method => :post do
        %p
          = text_field_tag(:email, params[:email], class:"input-block-level", placeholder:"Email")
        = submit_tag "Submit", class:"btn btn-block mbs"