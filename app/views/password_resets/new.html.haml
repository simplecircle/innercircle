#user
  .container
    = render "shared/flash", :flash=>flash unless flash.blank?
  - unless flash[:notice]
    .row-fluid
      .span12.form-row-narrow.mobile-padding.column-center.text-center
        %h4.mvl Submit your email for password reset instructions
    .row-fluid
      .span12.form-row-narrow.mobile-padding.column-center
        .well
          = form_tag password_resets_path, :method => :post do
            %p
              = text_field_tag(:email, params[:email], class:"input-block-level", placeholder:"Email")
            = submit_tag "Submit", class:"btn span12 mbs"