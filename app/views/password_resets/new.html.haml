#user
  .text-center
    = render "shared/flash", :flash=>flash
  - unless flash[:notice]
    .text-center
      %h4.mbl Submit your email for password reset instructions
    .span5.column-center
      .well
        = form_tag password_resets_path, :method => :post do
          %p
            = text_field_tag(:email, params[:email], class:"input-block-level", placeholder:"Email")
          = submit_tag "Submit", class:"btn btn-block mbs"